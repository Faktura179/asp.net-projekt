@model SwimmingPoolVM

<div class="">
    Nazwa: @Model.SwimmingPool.Name
</div>
<div class="">
    Lokacja: @Model.SwimmingPool.Location
</div>

<div>
    <h3>Tory:</h3>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Nazwa</th>
            <th>Pojemność</th>
            <th>Długość [m]</th>
        </tr>
    @foreach(var track in Model.SwimmingPool.SwimmingTracks)
    {
        <tr>
            <td>
                <a asp-controller="SwimmingTrack" asp-action="Index" asp-route-id="@track.Id">@track.Name</a>
            </td>
            <td>
                @track.Capacity
            </td>
            <td>
                @track.Length
            </td>
        </tr>
    }
    </table>
</div>
